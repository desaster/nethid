root = true

[*.{c,h}]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = false

[Makefile]
indent_style = tab

[CMakeLists.txt]
indent_style = tab

[*.{ts,js,css,html,json}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
